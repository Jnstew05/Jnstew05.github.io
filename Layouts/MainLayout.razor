@inherits LayoutComponentBase

<div class="header">
    <div class="logo">Logo</div>
    <div class="nav-buttons" id="nav-buttons">
        <button class="nav-button">Home</button>
        <button class="nav-button">About</button>
        <button class="nav-button">Services</button>
        <button class="nav-button">Contact</button>
    </div>
    <div class="burger" onclick="toggleMenu()">&#9776;</div>
</div>

<div>
    @Body
</div>

<script>
    function toggleMenu() {
        var navButtons = document.getElementById("nav-buttons");
        navButtons.classList.toggle("show");
    }
</script>


<style>
    body {
    margin: 0;
    font-family: Arial, sans-serif;
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: #333;
    color: white;
}

.logo {
    font-size: 24px;
    font-weight: bold;
}

.nav-buttons {
    display: flex;
}

.nav-button {
    background-color: transparent;
    border: none;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.nav-button:hover {
    background-color: #555;
}

.nav-button:focus {
    outline: none;
}

.burger {
    display: none;
    font-size: 30px;
    cursor: pointer;
}

media (max-width: 768px) {
    .nav-buttons {
        display: none;
        flex-direction: column;
        width: 100%;
        background-color: #333;
    }

    .nav-buttons.show {
        display: flex;
    }

    .burger {
        display: block;
    }

    .nav-button {
        width: 100%;
        text-align: left;
        padding: 10px;
    }
}



</style>